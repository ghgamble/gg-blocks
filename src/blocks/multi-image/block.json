{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "ggb/multi-image",
    "title": "Images Grid Layout",
    "category": "gg-blocks",
    "description": "Responsive three-column image grid with styled images.",
    "supports": {
        "align": false,
        "html": false
    },
    "attributes": {
        "images": {
            "type": "array",
            "default": [],
            "items": {
                "type": "object",
                "properties": {
                    "id": { "type": [ "integer", "string" ] },
                    "url": { "type": "string" },
                    "alt": { "type": "string" }
                }
            }
        }
    },
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css"
}
  