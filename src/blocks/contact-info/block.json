{
    "apiVersion": 2,
    "name": "ggb/contact-info",
    "title": "Contact Info",
    "category": "gg-blocks",
    "icon": "location-alt",
    "description": "Displays a styled address, phone, email, and an optional Google Map based on the address.",
    "supports": {
        "align": ["full", "wide"],
        "html": false
    },
    "attributes": {
        "address": { 
            "type": "string", 
            "source": "html", 
            "selector": ".contact-field.address span", 
            "default": "" 
        },
        "phone": { 
            "type": "string", 
            "source": "html", 
            "selector": ".contact-field.phone span",   
            "default": "" 
        },
        "emailAddress": { 
            "type": "string", 
            "default": "" 
        },
        "emailSubject": { 
            "type": "string", 
            "default": ""
        },
        "emailDisplayText": { 
            "type": "string", 
            "source": "html", 
            "selector": ".contact-field.email span", 
            "default": "" 
        },
        "hours": { 
            "type": "string", 
            "source": "html",
            "selector": ".contact-field.hours span", 
            "default": "" 
        },
        "showMap": { 
            "type": "boolean", 
            "default": true 
        },
        "backgroundColor": { 
            "type": "string", 
            "default": "" 
        },
        "iconColor": { 
            "type": "string", 
            "default": ""
        },
        "lat": { 
            "type": "number", 
            "default": null 
        },
        "lng": { 
            "type": "number", 
            "default": null 
        },
        "zoom": { 
            "type": "number", 
            "default": 14 
        },
        "mapTypeId": { 
            "type": "string", 
            "default": "roadmap" 
        },
        "mapAccentColor": { 
            "type": "string", 
            "default": "#2c944b" 
        }
    },
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "script": "file:./view.js"
}
